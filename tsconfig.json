{
	"compilerOptions": {
		"target": "es2017",
		"module": "esnext",
		"allowJs": true,
		"esModuleInterop": true,
		"moduleResolution": "Bundler",
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": true,
		"incremental": true,
		"strict": true,
		"lib": ["es6"],

		// Output
		"outDir": "./dist",

		// Path alias
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"]
		}
	}
}
